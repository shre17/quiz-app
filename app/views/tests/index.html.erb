<p id="notice"><%= notice %></p>

<h1>Tests</h1>

<table class="table table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.name %></td>
        <td><%= link_to 'Show', test, class: "btn btn-info float-right" %></td>
        <td><%= link_to 'Edit', edit_test_path(test), class: "btn btn-warning float-right" %></td>
        <td><%= link_to 'Destroy', test, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger float-right" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>
<%= link_to 'New Test', new_test_path, class: "btn btn-primary" %>
